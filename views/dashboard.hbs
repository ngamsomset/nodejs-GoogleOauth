<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>here are your stories</p>
{{#if stories}}
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}"></a>{{title}}</td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><div class="dash-status">{{status}}</div></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <h6>You have not created any stories</h6>
{{/if}}